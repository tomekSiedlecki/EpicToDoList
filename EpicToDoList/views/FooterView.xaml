<UserControl x:Class="EpicToDoList.views.FooterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EpicToDoList.views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Green" FontSize="20">Zrobione:</TextBlock>
            <TextBlock Foreground="black" FontSize="20">12</TextBlock>

            <TextBlock Foreground="Red" FontSize="20" Margin="40,0,0,0">Nie zrobione:</TextBlock>
            <TextBlock Foreground="black" FontSize="20">10</TextBlock>

            <TextBlock Foreground="black" FontSize="20" Margin="40,0,0,0">Losowa emotka:</TextBlock>
            <TextBlock Foreground="black" FontSize="20">😻</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
